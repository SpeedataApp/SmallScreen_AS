<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_small_screen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="循环"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:text="间隔ms"/>

        <EditText
            android:id="@+id/edv_period"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:text="2000"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edv_string"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Hello Echo，明日降温，零下28摄氏度！请注意保暖！祝您生活愉快!happy every day "/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_write_ch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="写入"/>

        <Button
            android:id="@+id/btn_stop_refash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="停止刷新"/>


    </LinearLayout>

    <EditText
        android:id="@+id/edv_asic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SpeedataGroup"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_write_en"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="写英文"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清除"/>

        <ToggleButton
            android:id="@+id/btn_sync_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="同步时间"
            android:textOn="同步时间"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
